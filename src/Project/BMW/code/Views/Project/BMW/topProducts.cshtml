@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    var productsItem = Sitecore.Context.Database.Items.GetItem("/sitecore/Content/BMW/Top Products");
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="../../../Css/style.css">
    <link rel="shortcut icon" href="../../../wwwroot/bmw_logo.ico">
    <title>@Html.Sitecore().Field("Page Title", productsItem, new { DisableWebEdit = true })</title>
</head>

<body>
  @* Header *@
  <div>
    @Html.Sitecore().Rendering("/sitecore/layout/Renderings/Feature/Header/Header")
  </div>
  <br />

  <div>
    @Html.Sitecore().Placeholder("product")
  </div>
  <br />

  @* Footer *@
  <div>
    @Html.Sitecore().Rendering("/sitecore/layout/Renderings/Feature/Footer/Footer")
  </div>
</body>
</html>