@model Feature.Product.Models.ProductBanner

@if (Model.BannerPath != "not found")
{
  <div style="text-align:center">
    <video id="vid" width="1200" height="600" autoplay loop muted>
      <source src="@Model.BannerPath" type="video/mp4">
      Your browser does not support the video tag.
    </video>

    <script>
      document.getElementById("vid").play();
    </script>
  </div>
  <br />
}