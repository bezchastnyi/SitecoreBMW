@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    var master = Sitecore.Configuration.Factory.GetDatabase("master");

    var homeItem = master.GetItem("/sitecore/Content/BMW/Home");
    var homeItemUrl = Sitecore.Links.LinkManager.GetItemUrl(homeItem);

    var allProductsItem = master.GetItem("/sitecore/Content/BMW/All Products");
    var allProductsItemUrl = Sitecore.Links.LinkManager.GetItemUrl(allProductsItem);

    var topProductsItem = master.GetItem("/sitecore/Content/BMW/Top Products");
    var topProductsItemUrl = Sitecore.Links.LinkManager.GetItemUrl(topProductsItem);

    var contactsItem = master.GetItem("/sitecore/Content/BMW/Contacts");
    var contactsItemUrl = Sitecore.Links.LinkManager.GetItemUrl(contactsItem);
}

<header class="footer">
  <div class="footer-container">
    <div class="footer-logo"> @Html.Sitecore().Field("Footer Logo") </div>
    <div class="footer-context"> @Html.Sitecore().Field("Footer Text") </div>

    <nav class="header-navigation">
      <ul class="navigation-bar">
        <li><a href="@homeItemUrl"> @Html.Sitecore().Field("__Display Name", homeItem)</a></li>
        <li><a href="@allProductsItemUrl"> @Html.Sitecore().Field("__Display Name", allProductsItem)</a></li>
        <li><a href="@topProductsItemUrl"> @Html.Sitecore().Field("__Display Name", topProductsItem)</a></li>
        <li><a href="@contactsItemUrl"> @Html.Sitecore().Field("__Display Name", contactsItem)</a></li>
      </ul>
    </nav>
  </div>
  <hr/>
</header>